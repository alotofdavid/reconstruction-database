<div class="row span8 center" >
  <ul class="pagination">
    <% current_page = params.fetch("page", 1).to_i %>
    <% if current_page > 1 %>
      <li>
      <%= pagination_link "&laquo;", current_page - 1 %>
      </li>
    <% end %>
    <% pages = pages_for(@solves) %>
    <% pages.each do |page| %>
      <li 
      <%= page.current_page == current_page ? 'class="active"' : "" %>
      >
      <%= pagination_link page.current_page %>
      </li>
    <% end %>
    <% if current_page < pages.count %>
      <li>
      <%= pagination_link "&raquo;", current_page + 1 %>
      </li>
    <% end %>
  </ul>
  </row>
