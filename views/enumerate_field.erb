<h1>List of <%= @model.field_name.capitalize %>s</h1>
<% columns = @model.columns %>
<table class="table table-condensed table-bordered table-striped table-hover span8">
  <tr>
    <% columns.each do |column| %>
      <th><%= column.capitalize %></th>
    <% end %>
    <th>Actions</th>
  </tr>

  <% @model.each do |entry| %>
    <% if entry.respond_to?(:averages) && entry.averages.empty? %>
      <tr class="danger">
    <% else %>
      <tr>
    <% end %>
    <% columns.each do |column| %>
      <td>
        <%= entry[column] %> <br>
      </td>
    <% end %>
    <td>
      <a href="/<%= @model.query_name %>/edit/<%= entry.id %>">
        Edit
      </a> |
      <a href="/<%= @model.query_name %>/delete/<%= entry.id %>">
        Delete
      </a>
    </td>
  </tr>
<% end %>
</table>
<br>
<br>
Entries highlighted in red are unused.
