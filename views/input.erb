<br>
<label>
  <%= field_name.capitalize %>
    <select name="time-specifier" class="form-control" >
      <option value="">All</option>
      <% [["equal", "Equal to"],
          ["less", "Less than"],
          ["greater", "Greater than"]].each do |key, name| %>
            <option 
            <% if params["time-specifier"] == key %>
              selected="selected"
            <% end %>
            value="<%= key %>"><%= name %></option>
    <% end %>
    </select> 
</label>
<label>
  <input cols="10" name="time-value" class="form-control small" type="text"
  value="<%=Helpers.h params["time-value"] %>">
</label>
