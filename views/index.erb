<div class="row center">
  <h3>Search</h3>
  <form action="/" method="GET" >
    <div class="form-inline">
        <%= erb :simple_dropdown,
            locals: {
                elements: ["All"] + RCDB::Solver.all.map(&:name),
                title: "Solver",
                name: "solver",
                selected: params["solver"] } %>
        <%= erb :simple_dropdown,
            locals: {
            elements: ["All", "Official", "Unofficial", ""] +
                       RCDB::Competition.all.map(&:name)
                        .reject { |c| c == "Unofficial" },
                title: "Competition",
                name: "competition",
                selected: params["competition"] } %>
        <%= erb :simple_dropdown,
            locals: {
                elements: ["All"] + RCDB::Puzzle.all.map(&:name),
                title: "Event",
                name: "puzzle",
                selected: params["puzzle"] } %>
        <%= RCDB::SolveTime.queryer_html params %>
        <%= RCDB::Tag.queryer_html params %>
        <div class="center">
          <button type="submit" class="btn btn-primary btn-lg">Submit</button>
        </div>
      </div>
  </form>

  <br><br>
</div>
<div class="row">
  <table class="table table-condensed table-bordered table-striped table-hover span8">
    <tr>
      <th> Solver </th>
      <th> Event </th>
      <th> Single </th>
      <th> Average </th>
      <th> Result </th>
      <th> Competition </th>
      <th> Date Added </th>
    </tr>
    <% paginate(@solves).where(visible: 1).entries.select(&:visible?).each do |solve| %>
      <tr>
        <td> <%=h solve.solver %> <br> </td>
        <td> <%=h solve.puzzle.name %> </td>
        <td> <div class="record"><%=h solve.single_record %></div> </td>
        <td> <div class="record"><%=h solve.average.average_record %></div> </td>
        <td> <a href="/solve/<%= solve.id %>"> <%=h solve.format %> </a> </td>
        <td> <%=h solve.competition %> </td>
        <td> <%=h date_added(solve) %> </td>
      </tr>
    <% end %>
  </table>

</div>

<div class="center">
  <%= erb :pager %>
</div>
