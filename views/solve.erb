<h2>
  <%= @solve.format %>
  <%= @solve.puzzle %>
  solve by
  <%= @solve.solver %>
  <%= @solve.competition.at %>
</h2>

<div class="youtube">
  <% unless @solve.youtube.nil? || @solve.youtube.empty? %>
    <a href="http://www.youtube.com/watch?v=<%= @solve.youtube %>" target="_blank" >
      View on YouTube
    </a>
  <% end %>
</div>

<div class="row">
  <div class="col-lg-8">
    <h3>Scramble</h3>
    <div class="algorithm well">
      <%= @solve.scramble %> <br><br>
    </div>

    <h3>Solution</h3>
    <div class="algorithm well">
      <%= format_solution(@solve.solution) %> <br>
    </div>
  </div>

  <% if @solve.average.solves.count >= 3 %>
    <div class="col-lg-4">
      <h3> Average </h3>
      <div class="others_in_average well">
        <%= @solve.average.render %>
      </div>
    </div>
  <% end %>
</div>

<% if @solve.notes %>
  <h3> Stats </h3>
  <div class="notes well">
    <%= tablify(@solve.notes) %>
  </div>
<% end %>

<div class="footnotes">
  <div>
    Added: <%= date_added(@solve) %>
  </div>
  <div>
    Reconstructed by: <%= @solve.reconstructor %>
  </div>
</div>
