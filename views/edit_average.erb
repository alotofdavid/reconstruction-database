<form action="/average/update/<%= @average.id %>" method="post">
  <% columns = @average.columns - [:id] %>
  <% columns.each do |column| %>
    <label><%= column.to_s.capitalize %></label>
    <textarea name="average[<%= column %>]" class="form-control"
      rows="<%= @average[column].to_s.lines.count %>" ><%= @average[column] %></textarea>
  <% end %>

  <br>
  <input type="submit" value="Update" class="form-control">
</form>

<br>
<table class="table table-bordered table-striped table-hover span8">
  <tr>
    <th> Id </th>
    <th> Time </th>
    <th> Actions </th>
  </tr>
  <% @average.solves.each do |solve| %>
    <tr>
      <td> <%= solve.id %> </td>
      <td> <%= solve.time %> </td>
      <td>
        <a href="/solve/edit/<%= solve.id %>">
          Edit
        </a>
        |
        <a href="/solve/delete/<%= solve.id %>">
          Delete
        </a>
      </td>
    </tr>
  <% end %>
</table>

<a href="/solve/new/<%= @average.id %>">New</a>
