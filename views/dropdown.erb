<label>
  <% default = where(name: params[query_name]).first %>
  <%= field_name %>
  <select name="<%= query_name %>" class="form-control">
    <option value="" 
    <% unless default %>
      selected="selected"
    <% end %>
    >All</option>
    <% all.each do |value| %>
      <option value="<%= value.name %>"
      <%= value == default ? ' selected="selected"' : "" %> >
      <%= value.name %>
      </option>
    <% end %>
  </select> 
</label>
