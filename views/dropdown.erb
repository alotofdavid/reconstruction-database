<label>
  <% default = params[query_name] %>
  <%= field_name %>
  <select name="<%= query_name %>" class="form-control">
    <option value="">All</option>
    <% all.each do |value| %>
      <option value="<%= value.name %>"
      <%= value.name == default ? ' selected="selected"' : "" %> >
      <%= value.name %>
      </option>
    <% end %>
  </select> 
</label>
